
    <div class="column col-12" style="text-align: center;">
        <h1>Crate new article</h1>
    </div>


    {{#if errors.length}}
    <div class="columns">
        <div class="column col-3"></div>

        <div class="column col-6">
            <p>Could not create the article because:</p>
            <ul>
                {{#each errors}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>

        <div class="column col-3"></div>
    </div>


    {{else}}
    <div class="columns">
        <div class="column col-3"></div>

        <div class="column col-6">
            <form action="/articles/create" method="POST">

                <input type="hidden" name="_csrf" value="{{csrfToken}}">

                <div class="form-group">
                    <label class="form-label" for="input-example-1">Title</label>
                    <input class="form-input" id="input-example-1" placeholder="Question" type="text" name="title">
                </div>

                <div class="form-group">
                    <label class="form-label" for="input-example-3">Text</label>
                    <textarea class="form-input" id="input-example-3" placeholder="Text" rows="3"
                        name="article"></textarea>
                </div>

                <button class="btn btn-primary" type="submit">Create</button>

            </form>
        </div>

    </div>
    {{/if}}
    