<div class="columns">

    {{#if hasDatabaseError}}
    <div class="column col-12">
        <h3 style="text-align: center;">Couldn't fetch the recipe at the moment, try again later.</h3>
    </div>

    {{else}}
    <div class="column col-3"></div>

    <div class="column col-6">
        <h1>{{Recipe.name}}</h1>
        <img src="/{{Recipe.image}}" style = "width: 100%;">
        <p>{{Recipe.desc}}</p>
    </div>
    <div class="column col-3"></div>
    {{/if}}

</div>