<h1 class="col-12 text-center">Login</h1>

{{#if errors.length}}
<div class="columns">
	<div class="column col-4"></div>

	<div class="column col-4 text-left">
		<p>Could not log in because:</p>

		<ul>
			{{#each errors}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
	</div>

	<div class="column col-4"></div>
</div>
{{/if}}

<div class="columns">
	<div class="column col-4"></div>

	<div class="column col-4">
		<form action="/auth/login" method="POST">
			<input type="hidden" name="_csrf" value="{{csrfToken}}">

			<div class="form-group">
				<label class="form-label" for="input-example-3">Username</label>
				<input class="form-input" id="input-example-1" type="text" name="username" placeholder="username">
			</div>

			<div class="form-group">
				<label class="form-label" for="input-example-3">Password</label>
				<input class="form-input" id="input-example-1" type="password" name="password" placeholder="password">
			</div>

			<button class="btn btn-primary" type="submit" value="Login">Login</button>

		</form>
	</div>

	<div class="column col-4"></div>
</div>