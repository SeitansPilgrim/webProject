<div class="col-12 text-center">
	<h1>Articles</h1>
</div>


{{#if session.isLoggedIn}}
<div class="col-12 my-2 text-center">
	<button class="btn btn-primary">
		<a class="text-secondary" href="/articles/create">Create new article</a>
	</button>
</div>
{{/if}}


{{#if hasDatabaseError}}
<div class="column col-12">
	<h3 class="text-center">Could not fetch the articles at the moment, try again later.</h3>
</div>


{{else}}
<div class="columns">
	{{#if Article.length}}

	<div class="column col-3"></div>

	<div class="column col-6">
		{{#each Article}}
		<div class="divider text-center" data-content=""></div>

		<h4>{{title}}</h4>
		<p>{{article}}</p>

		{{#if ../session.isLoggedIn}}
		<div class="text-center">

			<a class="text-success mx-2 px-2" href="/articles/{{articleID}}/update">
				<i class="icon icon-edit"></i>
			</a>

			<a class="text-error mx-2 bx-2" href="/articles/{{articleID}}/delete">
				<i class="icon icon-delete"></i>
			</a>

		</div>
		{{/if}}

		{{/each}}
		<div class="divider text-center" data-content=""></div>
	</div>

	<div class="column col-3"></div>

	{{else}}

	<div class="column col-12 my-2">
		<h3 class="text-center">There are no articles available.</h3>
	</div>

	{{/if}}
</div>
{{/if}}