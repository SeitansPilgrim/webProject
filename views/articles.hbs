<div class="col-12" style="text-align: center;">
	<h1>Articles</h1>
</div>


{{#if session.isLoggedIn}}

<div class="col-12 my-2 text-center">
	<button class="btn btn-primary">
		<a class="text-secondary" href="/articles/create">Create new article</a>
	</button>
</div>

{{/if}}


<div class="columns">
	{{#if hasDatabaseError}}
	<div class="column col-12">
		<h3 style="text-align: center;">Could not fetch the articles at the moment, try again later.</h3>
	</div>

	{{else}}
	{{#if Article.length}}
	{{#each Article}}
	<div class="column col-3"></div>

	<div class="column col-6">
		<h4>{{title}}</h4>
		<p>{{article}}</p>

		{{#if ../session.isLoggedIn}}
		<div style="text-align: right;">

			<a class="text-error" href="/articles/{{articleID}}/delete">
				<i class="icon icon-delete"></i>
			</a>

			<a class="text-success" href="/articles/{{articleID}}/update">
				<i class="icon icon-edit"></i>
			</a>

		</div>
	</div>

	{{/if}}

	<div class="column col-3"></div>
	{{/each}}

	{{else}}
	<p>There are no articles available.</p>

	{{/if}}
	{{/if}}

</div>