<div class="container">
    <div class="column col-12" style="text-align: center;">
        <h1>Crate new faq</h1>
    </div>


    {{#if errors.length}}
    <div class="columns">
        <div class="column col-3"></div>

        <div class="column col-6">
            <p>Could not create the article because:</p>
            <ul>
                {{#each errors}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>

        <div class="column col-3"></div>
    </div>


    {{else}}
    <div class="columns">
        <div class="column col-3"></div>

        <div class="column col-6">
            <form action="/recipes/create" method="POST" enctype="multipart/form-data">

                <input type="hidden" name="_csrf" value="{{csrfToken}}">

                <div class="form-group">
                    <label class="form-label" for="input-example-1">Name</label>
                    <input class="form-input" id="input-example-1" placeholder="Name" type="text" name="name">
                </div>


                <div class="form-group">
                    <label class="form-label" for="input-example-3">Image</label>
                    <input type="file" name='image'>
                </div>

                <div class="form-group">
                    <label class="form-label" for="input-example-3">Description</label>
                    <textarea class="form-input" id="input-example-3" placeholder="Description" rows="3"
                        name="desc"></textarea>
                </div>
                
                <div class="form-group"> 
                    <label class="form-label" for="input-example-3">Tags</label>
                    <input class="form-input" id="input-example-1" placeholder="cooking time" type="text" name="cookingTime">
                    <input class="form-input" id="input-example-1" placeholder="main ingredient" type="text" name="mainIngredient">
                    <input class="form-input" id="input-example-1" placeholder="meal type" type="text" name="mealType">
                </div>

                <button class="btn btn-primary" type="submit">Create</button>

            </form>
        </div>

        <div class="column col-3"></div>
    </div>
    {{/if}}

</div>