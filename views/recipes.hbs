<div class="column col-12" style="text-align: center;">
	<h1>Recipes</h1>
</div>
<a href="/createRecipe">Create</a>

<div class="columns">
	{{#if hasDatabaseError}}
	<p>Couldn't fetch the recipes at the moment, try again later.</p>
	{{else}}

	{{#if Recipe.length}}
	{{#each Recipe}}

	<div class="column col-2"></div>

	<div class="column col-8" style="align-tracks: center;">


		<div style="text-align: center;">
			
			<a href="/recipes/{{recipeID}}/delete">
				<i class="icon icon-delete"></i>
			</a>

			<a href="/recipes/{{recipeID}}/update">
				<i class="icon icon-edit"></i>
			</a>

		</div>

		<h4 style="text-align: center;">{{name}}</h4>
		<img src={{image}} alt="bild" width="100%" height="">
		<p>{{desc}}</p>

	</div>

	<div class="column col-2"></div>

	{{/each}}
	{{else}}
	<p>There are no recipes available!</p>
	{{/if}}

	{{/if}}
	<div class="column col-2"></div>
</div>