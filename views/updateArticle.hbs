<div class="container">
	<div class="column col-12" style="text-align: center;">
		<h1>Update FAQ</h1>
	</div>


	{{#if errors.length}}
	<div class="columns">
		<div class="column col-3"></div>

		<div class="column col-6">
			<p>Couldn't edit the article because:</p>
			<ul>
				{{#each errors}}
				<li>{{this}}</li>
				{{/each}}
			</ul>
		</div>

		<div class="column col-3"></div>
	</div>


	{{else}}
	{{#if hasDatabaseError}}

	<div class="columns">
		<div class="column col-3"></div>

		<div class="column col-6">
			<h3 style="text-align: center;">The article you are looking for does not exist</h3>
		</div>

		<div class="column col-3"></div>
	</div>


	{{else}}

	<div class="columns">
		<div class="column col-3"></div>
		
		<div class="column col-6">
			<form action="/articles/{{Article.articleID}}/update" method="POST">
				
				<input type="hidden" name="_csrf" value="{{csrfToken}}">

				<div class="form-group">
					<label class="form-label" for="input-example-1">Title</label>
					<input class="form-input" id="input-example-1" placeholder="Question" type="text" name="title"
						value="{{Article.title}}">
				</div>

				<div class="form-group">
					<label class="form-label" for="input-example-3">Text</label>
					<textarea class="form-input" id="input-example-3" placeholder="Answer" rows="3"
						name="article">{{Article.article}}</textarea>
				</div>

				<button class="btn btn-primary" type="submit">Update</button>

			</form>
		</div>

		<div class="column col-3"></div>
	</div>
	{{/if}}
	{{/if}}
</div>