<div class="column col-12" style="text-align: center;">
<h1>FAQ</h1>
</div>

 <div class="columns">
     <div class="column col-3"></div>

<div class="column col-6" style="margin: left 1000px;">

{{#if hasDatabaseError}}
	<p>Couldn't fetch the FAQ at the moment, try again later.</p>
{{else}}
	
	{{#if Post.length}}
		{{#each Post}}

				<!-- Accordions are made for each question-->
                <div class="divider text-center" data-content=""></div>
<details class="accordion" close>
  <summary class="accordion-header">
    <i class="icon icon-arrow-right mr-1" style="font-size: 20px;"></i>
    {{question}}
  </summary>
  <div class="accordion-body" style="padding-left: 35px;">
    {{anwser}}
  </div>
</details>
        
        {{/each}}
        <div class="divider text-center" data-content=""></div>
	{{else}}
		<p>There are no FAQ available!</p>
	{{/if}}
	
{{/if}}

</div>
<div class="column col-3"></div>
</div>